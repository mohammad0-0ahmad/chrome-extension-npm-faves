{
  "name": "npm faves",
  "description": "Manage your favorite npm packages",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "notifications"],
  "action": {
    "default_popup": "./views/popup-main.html",
    "default_icon": {
      "16": "/images/npm-faves-16.png",
      "32": "/images/npm-faves-32.png",
      "48": "/images/npm-faves-48.png",
      "128": "/images/npm-faves-128.png"
    }
  },
  "icons": {
    "16": "/images/npm-faves-16.png",
    "32": "/images/npm-faves-32.png",
    "48": "/images/npm-faves-48.png",
    "128": "/images/npm-faves-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.npmjs.com/package/*"],
      "all_frames": true,
      "js": [
        "./scripts/utils.js",
        "./scripts/npm-sync.js",
        "./scripts/content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["/styles/buttons.css", "/styles/notifications.css"]
    }
  ],
  "options_page": "./views/options.html"
}
